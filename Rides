@startuml

' hide the spot
' hide circle

' avoid problems with angled crows feet
skinparam linetype ortho

entity "Ride" as rides {
  * ride_id
  --
}

entity "Vehicle" as veh {
  * vehicle_id
  --
  owner_id : FOREIGN KEY
}

entity "Rider" as rider {
  * user_id
  --
}

entity "Driver" as dr {
  * user_id
  --
}

veh ||--o{ rides
rider }o--o{ rides
veh }o--|| dr

@enduml
