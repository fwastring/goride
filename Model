@startuml

' hide the spot
' hide circle

' avoid problems with angled crows feet
skinparam linetype ortho


entity "Trip" as trip {
  * trip_id: ID
  --
  route_id: ID
  driver_id: ID
  riders: []ID
}

entity "Rider" as rider {
  * user_id: ID
  --
  username: string
}

entity "Route" as route {
  * route_id: ID
  --
  start_point: Point
  end_point: Point
}

entity "Driver" as driver {
  * user_id: ID
  --
  username: string
}

entity "Delivery" as d {
  * user_id: ID
  * trip_id: ID
  --
  pickup_point: Point
  dropoff_point: Point
}

route }o--|| driver
route }o--o{ rider
route ||--o{ trip
d }o--|| rider
d }o--|| trip
trip }o--|| driver

@enduml

